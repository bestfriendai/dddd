# Production environment variables for Railway deployment
DEBUG=False
APP_ENV=production

# Railway will automatically set PORT
# PORT=8000

# Frontend URL for CORS configuration
FRONTEND_URL=https://your-app.vercel.app

AGENT_RECURSION_LIMIT=30
# Stream timeout in seconds (default: 1800 = 30 minutes)
STREAM_TIMEOUT_SECONDS=1800

# Search Engine Configuration
SEARCH_API=tavily
TAVILY_API_KEY=your_tavily_api_key_here
# BRAVE_SEARCH_API_KEY=your_brave_api_key_here
# JINA_API_KEY=your_jina_api_key_here

# Optional: RAG provider
# RAG_PROVIDER=ragflow
# RAGFLOW_API_URL=http://localhost:9388
# RAGFLOW_API_KEY=ragflow-xxx
# RAGFLOW_RETRIEVAL_SIZE=10

# Optional: TTS for podcast generation
# VOLCENGINE_TTS_APPID=your_volcengine_appid
# VOLCENGINE_TTS_ACCESS_TOKEN=your_volcengine_token
# VOLCENGINE_TTS_CLUSTER=volcano_tts
# VOLCENGINE_TTS_VOICE_TYPE=BV700_V2_streaming

# Optional: LangSmith tracing
# LANGSMITH_TRACING=true
# LANGSMITH_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_API_KEY=your_langsmith_key
# LANGSMITH_PROJECT=your_project_name

# Python configuration for Railway
PYTHONUNBUFFERED=1
UV_SYSTEM_PYTHON=1
